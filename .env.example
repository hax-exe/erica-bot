# Environment Configuration
# Copy this file to .env and fill in the values
# NEVER commit .env to version control!

# ===========================================
# DISCORD CONFIGURATION (Required)
# ===========================================
# Get these from https://discord.com/developers/applications
DISCORD_TOKEN=your_bot_token_here
DISCORD_CLIENT_ID=your_client_id_here
DISCORD_CLIENT_SECRET=your_client_secret_here
# Optional: Set for faster command deployment during development
DISCORD_DEV_GUILD_ID=your_dev_guild_id_here

# ===========================================
# DATABASE CONFIGURATION
# ===========================================
# For local development (update credentials as needed):
DATABASE_URL=postgresql://bot:your_password@localhost:5432/discord_bot

# For Docker deployment (used by docker-compose):
DB_PASSWORD=your_secure_database_password

# ===========================================
# LAVALINK CONFIGURATION
# ===========================================
# Music server settings (must match lavalink/application.yml)
LAVALINK_HOST=localhost
LAVALINK_PORT=2333
LAVALINK_PASSWORD=your_lavalink_password

# ===========================================
# BOT CONFIGURATION
# ===========================================
BOT_PREFIX=!
BOT_DEFAULT_LANGUAGE=en
NODE_ENV=development
LOG_LEVEL=info

# ===========================================
# BOT API CONFIGURATION
# ===========================================
# Port for the Bot API server (dashboard communicates with bot through this)
BOT_API_PORT=3002
# URL for dashboard to connect to bot API (defaults to localhost)
BOT_API_URL=http://localhost:3002
# Shared secret for secure dashboard-bot communication (min 32 chars)
# Generate with: openssl rand -base64 32
BOT_API_SECRET="your_secret_here"

# ===========================================
# OPTIONAL: Third-party API Keys
# ===========================================
# Spotify (for Spotify link support via LavaSrc - get from https://developer.spotify.com/dashboard)
SPOTIFY_CLIENT_ID=your_spotify_client_id
SPOTIFY_CLIENT_SECRET=your_spotify_client_secret

# YouTube OAuth (for music playback - no quotes around the value!)
YOUTUBE_OAUTH_REFRESH_TOKEN=your_refresh_token_here

# Other optional integrations
# TWITCH_CLIENT_ID=
# TWITCH_CLIENT_SECRET=

# ===========================================
# REDIS CONFIGURATION
# ===========================================
# Redis connection URL (used for HA mode)
REDIS_URL=redis://localhost:6379

# ===========================================
# HIGH AVAILABILITY CONFIGURATION
# ===========================================
# Enable HA mode (requires Redis)
HA_ENABLED=false
# Unique instance identifier (auto-generated if not set)
# HA_INSTANCE_ID=bot-primary
# Heartbeat interval in milliseconds (default: 3000)
# HA_HEARTBEAT_INTERVAL=3000
# Leader timeout in milliseconds (default: 10000)
# HA_LEADER_TIMEOUT=10000
